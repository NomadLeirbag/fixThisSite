{
  "manifest_version": 2,

  "name": "Fix This Site",
  "description": "A simple chrome plugin to style unstyled pages",
  "version": "1.0",

  "permissions": ["activeTab"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.js", "checkForStyles.js"]
    }
  ],

  "web_accessible_resources": [
    "style.css",
    "jquery.js"
  ],

  "browser_action": {
    "default_icon": "icon128.png"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "scripts": ["load.js"],
    "persistent": false
  }
}